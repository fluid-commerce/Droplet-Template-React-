{
  "name": "fluid-droplet-template",
  "version": "1.0.0",
  "description": "A React + TypeScript template for creating Fluid droplet services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "tsc && vite build",
    "build:backend": "cd backend && npm run build",
    "build:full": "npm run build && npm run build:backend",
    "preview": "vite preview",
    "test": "jest",
    "test:backend": "cd backend && npm test",
    "test:full": "npm run test && npm run test:backend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint frontend --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:backend": "cd backend && npm run lint",
    "lint:full": "npm run lint && npm run lint:backend",
    "lint:fix": "eslint frontend --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "install:all": "npm install && cd backend && npm install",
    "start:backend": "cd backend && npm start",
    "migrate": "node database/migrate.cjs up",
    "migrate:status": "node database/migrate.cjs status",
    "setup:db": "./setup-database.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
