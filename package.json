{
  "name": "fluid-droplet-template",
  "version": "1.0.0",
  "description": "A React + TypeScript template for creating Fluid droplet services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "npm run build:full",
    "build:backend": "cd backend && npm run build",
    "build:full": "tsc && vite build && npm run build:backend",
    "preview": "vite preview",
    "lint": "eslint frontend --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:backend": "cd backend && npm run lint",
    "lint:full": "npm run lint && npm run lint:backend",
    "lint:fix": "eslint frontend --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "install:all": "npm install && cd backend && npm install",
    "start:backend": "cd backend && npm start",
    "migrate": "node database/migrate.cjs up",
    "migrate:status": "node database/migrate.cjs status",
    "setup:db": "./setup-database.sh",
    "postinstall": "cd backend && npm install && cd .. && node scripts/postinstall.js",
    "setup": "node scripts/auto-setup.js",
    "setup:full": "npm run setup && npm run migrate",
    "dev:auto": "npm run setup:full && npm run dev:full",
    "test": "node tests/droplet.test.js",
    "test:local": "TEST_API_URL=http://localhost:3001 node tests/droplet.test.js",
    "test:prod": "TEST_API_URL=https://your-backend.onrender.com node tests/droplet.test.js",
    "create-droplet": "node scripts/create-droplet.js",
    "update-droplet": "node scripts/update-droplet.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
